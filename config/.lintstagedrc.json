{
  "backend/**/*.{js,ts}": [
    "npx eslint --config backend/eslint.config.ts --fix",
    "npx prettier --config config/.prettierrc --write"
  ],
  "frontend/**/*.{js,jsx,ts,tsx,mjs}": [
    "npx eslint --config frontend/eslint.config.mjs --fix",
    "npx prettier --config config/.prettierrc --write",
    "npm run test --workspace=frontend -- --run --changed"
  ]
}
